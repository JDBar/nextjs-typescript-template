{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended", "tslint-config-prettier"],
	"jsEnable": true,
	"jsRules": {
		"class-name": true,
		"curly": true,
		"encoding": true,
		"indent": [true, "tabs", 2],
		"jsdoc-format": true,
		"no-bitwise": false,
		"no-consecutive-blank-lines": true,
		"no-console": false,
		"no-shadowed-variable": true,
		"no-string-literal": true,
		"no-string-throw": true,
		"no-trailing-whitespace": true,
		"no-var-keyword": false,
		"object-literal-sort-keys": false,
		"semicolon": [true, "always"],
		"whitespace": true,
		"radix": false
	},
	"rules": {
		"class-name": true,
		"curly": true,
		"encoding": true,
		"indent": [true, "tabs", 2],
		"interface-name": true,
		"jsdoc-format": true,
		"no-bitwise": false,
		"no-consecutive-blank-lines": true,
		"no-console": false,
		"no-shadowed-variable": true,
		"no-string-literal": true,
		"no-string-throw": true,
		"no-trailing-whitespace": true,
		"no-var-keyword": false,
		"object-literal-sort-keys": false,
		"semicolon": [true, "always"],
		"whitespace": true,
		"radix": false
	},
	"rulesDirectory": [],
	"linterOptions": {
		"exclude": ["build/**/*", "node_modules/**/*", ".next/**/*"]
	}
}
