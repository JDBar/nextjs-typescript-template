{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			},
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"rendererOptions": {
						"sass": {
							"includePaths": ["./"]
						}
					}
				}
			}
		]
	},
	"include": [
		"**/*.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", ".next"]
}
